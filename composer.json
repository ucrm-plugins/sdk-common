{
    "name": "ucrm-plugins/sdk-common",
    "description": "A common library for the UCRM Plugin SDK.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://gitlab.com/ucrm-plugins/sdk-common.git",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@spethtech.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4.26",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-zip": "*",
        "ext-pdo": "*",
        "ext-intl": "*",
        "ext-yaml": "*",
        "ext-simplexml": "*",
        "nette/php-generator": "~3.2",
        "defuse/php-encryption": "~2.2",
        "vlucas/phpdotenv": "~2.5",
        "symfony/yaml": "^4.3",

        "spaethtech/php-dynamics": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "SpaethTech\\UCRM\\SDK\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SpaethTech\\UCRM\\SDK\\": [
                "src/",
                "tests/"
            ]
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../lib/sdk-*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../../../../spaethtech/php-monorepo/lib/*",
            "options": {
                "symlink": true
            }
        }
    ]
}
